{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.5.0",
  "description": "__MSG_appDesc__",
  "default_locale": "zh_CN",
  "permissions": ["storage", "sidePanel"],
  "host_permissions": [
    "https://x.com/*",
    "https://www.x.com/*",
    "https://www.instagram.com/*",
    "https://instagram.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://www.x.com/*",
        "https://www.instagram.com/*",
        "https://instagram.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
